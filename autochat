return function(Settings)
    -- Gi√° tr·ªã m·∫∑c ƒë·ªãnh n·∫øu ng∆∞·ªùi d√πng kh√¥ng truy·ªÅn config
    Settings = Settings or {}
    local ChatMessage = Settings.ChatMessage or "Chat con me may nek! üöÄ"
    local ChatDelay = Settings.ChatDelay or 5

    -- Auto chat trong khung chat
    local ReplicatedStorage = game:GetService("ReplicatedStorage")
    local ChatEvent = ReplicatedStorage:FindFirstChild("DefaultChatSystemChatEvents")

    if ChatEvent then
        local SayMessageRequest = ChatEvent:FindFirstChild("SayMessageRequest")

        if SayMessageRequest then
            while true do
                wait(ChatDelay)
                SayMessageRequest:FireServer(ChatMessage, "All")
            end
        end
    end
end
