-- Lấy bảng Settings được truyền vào từ file chính
local function AutoChat(Settings)
    local Players = game:GetService("Players")

    -- Hàm gửi tin nhắn tự động
    local function SendMessage()
        while true do
            wait(Settings.ChatDelay) -- Dùng giá trị ChatDelay từ bảng Settings
            game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(Settings.ChatMessage, "All")
        end
    end

    -- Khi người chơi tham gia, bắt đầu auto chat
    Players.PlayerAdded:Connect(function(player)
        SendMessage()
    end)
end

-- Khởi chạy hàm AutoChat với Settings
AutoChat(_G.Settings)
